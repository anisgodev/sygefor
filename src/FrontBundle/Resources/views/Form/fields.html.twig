{%- block cgu_row -%}
    <div class="form-group">
        <label class="control-label col-sm-2 control-label {{ form.vars.required ? 'required' : '' }}">
            {{ form.vars.label }}
        </label>
        <div class="col-sm-10">
            {{ form_widget(form) }}
            <p class="help-block">Spécifiez ici vos conditions d'utilisation.</p>
            {{ form_errors(form) }}
        </div>
    </div>
{% endblock %}

