{% block header %}
<!-- Fixed navbar -->
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header visible-xs">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand logo" href="{{ path('front.program.promoted') }}">
                <img src="{{ asset('assets/img/logo.png') }}" height="30" alt="Logo">
            </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="hidden-xs">
                    <a class="navbar-brand logo" href="{{ path('front.program.promoted') }}">
                        <img src="{{ asset('assets/img/logo.png') }}" height="30" alt="Logo">
                    </a>
                </li>
                <li><a href="{{ path('front.program.promoted') }}">Accueil</a></li>
                {% if app.user.id is defined %}
                    <li><a href="{{ path('front.program.organization', {code: app.user.organization.code}) }}">Mes formations disponibles</a></li>
                {% endif %}
                <li>

                <li>
                    <a href="" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Programme par centre <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        {% for organization in allOrganizations() %}
                            <li><a href="{{ path('front.program.organization', {code: organization.code}) }}">{{ organization.name }}</a></li>
                        {% endfor %}
                    </ul>
                </li>
                <li><a href="{{ path('front.program.index') }}">Programme</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                {% if app.user.id is defined %}
                    <li><a href="{{ path('front.account') }}">Mon compte</a></li>
                    <li><a href="{{ path('front.account.logout') }}">Se déconnecter</a></li>
                {% else %}
                    <li><a href="{{ path('front.page.login') }}" title="Accéder à votre espace">Espace personnel</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% endblock header %}